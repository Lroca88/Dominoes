@model Dominoes.Models.Game

@{
    ViewBag.Title = "Details";
    List<String> Names = ViewBag.NamesInGame;
}

<div>

    <h2>Game Details</h2>
    <div>
        @switch (Model.WinningCategory)
        {
            case  "Pollona":
                <i class="fa fa-tripadvisor fa-5x"></i>
                break;
            case "Viajero":
                <i class="fa fa-paper-plane fa-5x"></i>
                break;
            case "GameWinner":
                <i class="fa fa-trophy fa-5x"></i>
                break;
            default:
                <h1> 
                    <span class="label label-warning">Still Playing <i class="fa fa-check-square"></i></span>
                </h1>
                break;
        }
        
        
    </div>
    <hr />
    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GameSerie.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GameSerie.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Notes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Notes)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WinningScore)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WinningScore)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GameComplete)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GameComplete)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WinningTeam)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WinningTeam)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Player1)
        </dt>

        <dd>
            @Names.ElementAt(0)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Player2)
        </dt>

        <dd>
            @Names.ElementAt(1)
        </dd>

        @if (Names.Count() > 2)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Player3)
            </dt>
            
            <dd>
                @Names.ElementAt(2)
            </dd>  
        }

         @if (Names.Count() > 3)
         {
            <dt>
                @Html.DisplayNameFor(model => model.Player4)
            </dt>

            <dd>
                @Names.ElementAt(3)
            </dd>
         }
        

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.GameID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
